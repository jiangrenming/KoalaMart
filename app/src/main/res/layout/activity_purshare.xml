<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_header"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:orientation="vertical"
        android:id="@+id/puroff_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/puroff_list"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!--<include layout="@layout/layout_common_empty"/>-->
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/empty_puroff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/default_img"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="暂无买过的商品"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>