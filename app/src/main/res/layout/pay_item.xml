<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="95dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/pay_img"
            android:layout_width="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/default_img"
            android:layout_height="90dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="3"
                    android:text="红牛功能性饮料"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom"
                    android:text="0.00"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goods_clk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_orderId"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yanse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="颜色："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chicun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="尺寸："
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weights_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_clk"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zhongliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="重量："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:text="类型："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fenge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="风格："
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:text="共1件"
                android:textColor="@color/gray_three"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/pay_item"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginTop="3dp"
        android:layout_height="0.5dp"/>
</LinearLayout>