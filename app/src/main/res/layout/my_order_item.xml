<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="单号："
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/order_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1234567890"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:text="未支付"
            android:textColor="@color/btn_red"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/goods_details"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right"
            android:layout_height="20dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="2018-05-28 11:22" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="共"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/order_all_count"
                android:layout_width="wrap_content"
                android:text="1"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="件(运费"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/trans_tax"
                android:layout_width="wrap_content"
                android:text="AUD 0"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text=")"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="总计:"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/order_curreny"
                android:layout_width="wrap_content"
                android:text="AUD  "
                android:textColor="@color/btn_red"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/order_allprice"
                android:layout_width="wrap_content"
                android:text="3.39"
                android:textColor="@color/btn_red"
                android:gravity="center_vertical|right"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>