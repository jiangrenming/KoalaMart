<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/top_header"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:layout_height="@dimen/dp_20"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/phone"
            android:layout_height="@dimen/dp_25" />
        <EditText
            android:id="@+id/account"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:hint="请输入手机号码"
            android:textSize="@dimen/sp_13"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:layout_height="@dimen/dp_one"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/pwd"
            android:layout_height="@dimen/dp_25" />
        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:hint="请输入密码"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_15"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:paddingTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:text="忘记密码？"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:textColor="@color/red"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:background="@color/gray_light2"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/login"
            style="@style/login_comfirm"/>
        <TextView
            android:id="@+id/register"
            style="@style/login_register"/>
        <LinearLayout
            android:id="@+id/wx_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:src="@mipmap/wx"
                android:scaleType="fitXY"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="使用微信进行登录" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>