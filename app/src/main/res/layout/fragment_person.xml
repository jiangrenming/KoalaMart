<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />
        <ImageView
            android:id="@+id/setting"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_25"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/setting"
            android:layout_height="@dimen/dp_25" />
    </RelativeLayout>
    <com.koalafield.cmart.widget.MyBoundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:background="@color/gray_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/person_head_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/person_av"
                            android:layout_width="@dimen/dp_35"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/mine" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:gravity="bottom"
                            android:paddingLeft="@dimen/dp_20"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_18"
                            android:text="17621216837" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/discount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/discount_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="优惠券"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/collection"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/collection_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="0" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="收藏"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/counp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/counp_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="积分"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head">

                <LinearLayout
                    android:id="@+id/order_infos"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="我的订单"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="查看全部"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@mipmap/right" />
                </LinearLayout>

                <View
                    android:id="@+id/diliver"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/order_infos"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/order_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diliver"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/no_pay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:scaleType="fitXY"
                            android:src="@mipmap/pay_wait" />

                        <TextView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:text="待支付" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/pay_wait"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:scaleType="fitXY"
                            android:src="@mipmap/wait_send" />

                        <TextView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center_horizontal"
                            android:text="待发货" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/wait_self"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:scaleType="fitXY"
                            android:src="@mipmap/wait_receiver" />

                        <TextView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center_horizontal"
                            android:text="待收货" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/diliver_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_7"
                    android:layout_below="@+id/order_state"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:id="@+id/nomaral"
                    android:layout_below="@+id/diliver_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="常用功能"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <View
                    android:id="@+id/diliver_three"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/nomaral"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/diliver_three"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/old_buy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/buyerd" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:textSize="@dimen/sp_13"
                                android:text="买过的" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/address_manager"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/address" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:text="地址管理" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/service_infos"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/service_layer" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:gravity="center_horizontal"
                                android:text="服务协议" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contact_custemer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/constact" />
                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:text="联系客服" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/advice"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">
                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/user_edit" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:gravity="center_horizontal"
                                android:text="意见反馈" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/share"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/share" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:text="App分享" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/about_us"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/about_us" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:text="关于我们" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/emoply"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:scaleType="fitXY"
                                android:src="@mipmap/employ" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/dp_5"
                                android:textSize="@dimen/sp_13"
                                android:text="招聘信息" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.koalafield.cmart.widget.MyBoundScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="我的"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</LinearLayout>