<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/top_header"/>
    <RelativeLayout
        android:id="@+id/user_phone"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="头像"/>
        <ImageView
            android:id="@+id/phone_ava"
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/ic_launcher_round"
            android:paddingRight="@dimen/dp_5"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/phone"
            android:layout_height="@dimen/dp_40" />
        <ImageView
            android:id="@+id/phone"
            android:layout_width="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_15"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <RelativeLayout
        android:id="@+id/name"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="名字"/>
        <TextView
            android:id="@+id/name_person"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/user_name"
            android:paddingRight="@dimen/dp_5"
            android:text="17621216837"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/user_name"
            android:layout_width="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_15"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <RelativeLayout
        android:id="@+id/sex"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="性别"/>
        <TextView
            android:id="@+id/sex_person"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/user_sex"
            android:text="男"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/user_sex"
            android:layout_width="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_15"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/gray"
        android:layout_height="0dp"/>
</LinearLayout>