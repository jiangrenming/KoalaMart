<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/top_header"/>
    <RelativeLayout
        android:id="@+id/user_phone"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="头像"/>
        <ImageView
            android:id="@+id/phone_ava"
            android:layout_width="40dp"
            android:src="@mipmap/ic_launcher_round"
            android:paddingRight="5dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/phone"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/phone"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <RelativeLayout
        android:id="@+id/name"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="名字"/>
        <TextView
            android:id="@+id/name_person"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/user_name"
            android:paddingRight="5dp"
            android:text="17621216837"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/user_name"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <RelativeLayout
        android:id="@+id/sex"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="性别"/>
        <TextView
            android:id="@+id/sex_person"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/user_sex"
            android:text="男"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/user_sex"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="0.5dp"
        android:background="@color/gray_light2"/>

    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/gray_light2"
        android:layout_height="0dp"/>
</LinearLayout>