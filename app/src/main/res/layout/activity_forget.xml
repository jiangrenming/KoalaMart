<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/top_header"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="@dimen/dp_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/phone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:text="+" />
        <TextView
            android:id="@+id/country_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:text="选择区号" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/forget_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:layout_height="@dimen/dp_one"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@mipmap/unpwd"
            android:layout_height="@dimen/dp_25" />
        <EditText
            android:id="@+id/forget_code"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_12"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/forget_btn"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/blue"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/register_code"
            android:textSize="@dimen/sp_14"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_50">

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码(6-18位数字或字母)"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:scaleType="fitXY"
            android:src="@mipmap/pwd"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_light2"
        android:layout_height="@dimen/dp_10"/>
    <TextView
        android:id="@+id/forget_comfirm"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="@dimen/dp_40"
        android:background="@color/btn_red"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="确定重置"/>
</LinearLayout>