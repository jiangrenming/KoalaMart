<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="张三"/>
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:id="@+id/address_phone"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content"
            android:text="17621216837"/>
        <TextView
            android:id="@+id/address_detail"
            android:layout_below="@+id/address_phone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上海上海市浦东新区世博大道鲁能国际中心b座11楼"/>
        <View
            android:id="@+id/address_view"
            android:layout_width="match_parent"
            android:background="@color/gray_light2"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/address_detail"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_below="@+id/address_view"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_30">

            <LinearLayout
                android:id="@+id/iv_address_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/user_edit"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="编辑"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iv_address_trash"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_5"
                    android:layout_height="@dimen/dp_20"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/delete" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="删除"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="@dimen/sp_13"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/time"
        android:layout_height="@dimen/dp_2"/>
</LinearLayout>