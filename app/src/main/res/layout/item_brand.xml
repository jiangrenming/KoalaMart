<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:textColor="@color/gray_three"
        android:gravity="center_horizontal|center_vertical"
        android:text="全部"
        android:layout_height="30dp" />
    <View
        android:layout_below="@+id/brand_name"
        android:id="@+id/brand_select"
        android:layout_alignStart="@+id/brand_name"
        android:layout_alignEnd="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/red"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/brand_name"
        android:layout_alignRight="@+id/brand_name" />
