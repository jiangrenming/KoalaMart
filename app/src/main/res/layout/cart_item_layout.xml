<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/goods_cart_img"
                android:layout_width="80dp"
                android:src="@mipmap/buy"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/goods_cart_name"
                    android:layout_width="match_parent"
                    android:text="好地方反搜都放假"
                    android:lines="2"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/color_size"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/goods_cart_color"
                        android:layout_width="wrap_content"
                        android:text="颜色:红儿"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/goods_cart_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:text="尺寸:是多少"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/goods_cart_amount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="AUD:198.88"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@color/gray"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/goods_cart_minus"
                            android:layout_width="20dp"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/minus"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/goods_cart_number"
                            android:layout_width="wrap_content"
                            android:text="1"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:id="@+id/goods_cart_add"
                            android:layout_width="20dp"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/add"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="130dp"
        android:text="删除"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:background="@color/btn_red"
        android:layout_height="match_parent" />

</LinearLayout>